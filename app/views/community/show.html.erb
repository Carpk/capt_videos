<div class="container">
  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-6">
      <h2><%=@user_profile.username%>'s profile</h2>
      Member status: awesome!<br>
      Video uploads: <%=@user_profile.videos.count%>
    </div>
    <div class="col-sm-2"></div>
  </div>
  <div>
    <% @user_profile.videos.each do |vid| %>
      <div class="col-sm-2 pull-left">
        <%= link_to(image_tag(vid.image, :size=>"160x94", :class=>"img-rounded"), video_path(vid.id)) %>
        <%= link_to vid.title, video_path(vid.id)%>
      </div>
    <% end %>
  </div>
</div>
