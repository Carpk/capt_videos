<div class="container">
  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-6">
      <h2><%=@user_profile.username%>'s profile</h2>
      Member status: awesome!<br>
      Video uploads: <%=@user_profile.videos.count%>
    </div>
    <div class="col-sm-2"></div>
  </div>

  <div class="row">
    <% @user_profile.videos.each do |vid| %>
      <div class="col-sm-2 pull-left">
        <%= link_to(image_tag(vid.image, :size=>"160x94", :class=>"img-rounded"), video_path(vid.id)) %>
        <%= link_to vid.title, video_path(vid.id)%>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
      <%= form_for @message do |f| %>
        <%= f.label :send_message %>:<br />
        <%= f.text_area :body, size: "40x8" %><br />
        <%= f.hidden_field :recipient_id %>

        <%= f.submit "Send message"%>
      <% end %>
    </div>
    <div class="col-sm-4"></div>
  </div>
</div>
